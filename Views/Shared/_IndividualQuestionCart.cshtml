@model Examstagram.Models.Question

    <div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">
        <!-- Card--> 
        <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
            <div class="card-body px-3 pt-3 pb-1 row">
                <div class="col-7"><label class="float-left">@Model.QuestionContent</label></div>
                <div class="col-5"><label class="float-right"><span class="text-info h5"></span></label> </div>
            </div>
            <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.imagePath@Model.Image" alt="Card image cap">
            <div class="card-body p-1 px-3 row">
                <div class="col-6">
                    <span class="badge p-2 border w-100" style="background-color:lavenderblush"></span>
                </div>
                <div class="col-6 border-0">
                    <span class="badge p-2 border w-100" style="background-color:aliceblue"></span>
                </div>
                <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                    <p> @Model.Explaining</p>
                </div>
                <div class="col-12 p-1">
                    <a asp-action="Exercise" asp-route-Id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">Exercise</a>
                </div>
            </div>
        </div>
    </div>

