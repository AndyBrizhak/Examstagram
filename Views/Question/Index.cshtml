@model IEnumerable<Examstagram.Models.Question>


<div class="container p-3">
    <div class="row p-4">
        <div class="col-6">
            <h2 class="text-primary">Список вопросов</h2>
        </div>
        <div class="col-6">
          <a asp-controller="Question" asp-action="Upsert" class="btn btn-primary">
                <i class="fas fa-plus"></i> &nbsp; Создать новый вопрос
         </a>
        </div>
    </div>
    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Вопрос
                    </th>
                    <th>
                        Пояснение
                    </th>
                    <th>
                        Категория
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.QuestionContent</td>
                    <td width="20%">@obj.Explaining</td>




                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Question" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-1">
                                <i class="far fa-edit"></i>
                            </a>

                            <a asp-controller="Question" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-1">
                                <i class="far fa-trash-alt"></i>
                            </a>


                        </div>
                    </td>



                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No  question exists.</p>
    }

</div>

