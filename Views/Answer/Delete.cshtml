@model Examstagram.Models.Answer

<form method="post" asp-action="DeletePost">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Удалить ответ
            </h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnswerContent"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnswerContent" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnswerCorrect"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnswerCorrect" disabled class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="QuestionId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="QuestionId" disabled class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <input type="submit" class="btn btn-outline-danger w-100" value="Удалить" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-outline-success w-100">
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Назад
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
            </div>
        </div>
    </div>

</form>


@section Scripts{
    @{


        <partial name="_ValidationScriptsPartial" />
    }}